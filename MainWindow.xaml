<Window x:Class="ComfyX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComfyX - AI Workflow Studio"
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1000"
        Background="#0A0A12"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Icon="assets/app.ico">

    <Border CornerRadius="12" Background="{StaticResource BgDeepBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- ROW 0: TopBar (52px)                                           -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="0" Background="{StaticResource BgPrimaryBrush}" CornerRadius="12,12,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2"/>
                    </Grid.RowDefinitions>

                    <!-- TopBar Content -->
                    <Grid Grid.Row="0" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Brand + File Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                            <!-- Brand Icon -->
                            <Border Width="28" Height="28" CornerRadius="7" Margin="0,0,10,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#00F5FF" Offset="0"/>
                                        <GradientStop Color="#FF00FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="C" FontSize="15" FontWeight="Black" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="ComfyX" Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                            <!-- File Buttons -->
                            <Button x:Name="btnNew" Content="New" Style="{StaticResource TopBarButton}" Click="BtnNew_Click" Margin="0,0,2,0"/>
                            <Button x:Name="btnOpen" Content="Open" Style="{StaticResource TopBarButton}" Click="BtnOpen_Click" Margin="0,0,2,0"/>
                            <Button x:Name="btnSave" Content="Save" Style="{StaticResource TopBarButton}" Click="BtnSave_Click"/>
                        </StackPanel>

                        <!-- CENTER: ComfyUI Start/Stop Toggle -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button x:Name="btnComfyToggle" Click="BtnComfyToggle_Click" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                        <Setter Property="Padding" Value="16,6"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="comfyBorder" Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="comfyBorder" Property="Background" Value="#20FFFFFF"/>
                                                            <Setter TargetName="comfyBorder" Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="#00F5FF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="ledComfy" Width="10" Height="10" Fill="#555555" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtComfyToggle" Text="Start ComfyUI" Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- RIGHT: Status + Language + License + Window Controls -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                            <!-- Connection Status Badge -->
                            <Border x:Name="badgeConnection" Background="#15FF3366" CornerRadius="10" Padding="8,3" Margin="0,0,8,0"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="ledConnection" Width="6" Height="6" Fill="{StaticResource ErrorBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtConnectionStatus" Text="Disconnected" Foreground="{StaticResource ErrorBrush}"
                                               FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Language Toggle (EN/TH pill) -->
                            <Button x:Name="btnLanguage" Click="BtnLanguage_Click" Cursor="Hand" Margin="0,0,8,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource BgElevatedBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="langBorder" Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="12" Padding="10,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="langBorder" Property="Background" Value="#25FFFFFF"/>
                                                            <Setter TargetName="langBorder" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <TextBlock x:Name="txtLanguage" Text="EN" Foreground="{StaticResource NeonCyanBrush}"
                                           FontSize="11" FontWeight="Bold"/>
                            </Button>

                            <!-- License Button -->
                            <Button x:Name="btnLicense" Content="License" Style="{StaticResource TopBarButton}" Click="BtnLicense_Click" Margin="0,0,16,0"/>

                            <!-- Separator -->
                            <Rectangle Width="1" Height="20" Fill="{StaticResource BorderSubtleBrush}" Margin="0,0,8,0"/>

                            <!-- Window Controls -->
                            <Button x:Name="btnMinimize" Width="36" Height="32" Click="BtnMinimize_Click" ToolTip="Minimize">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <TextBlock Text="--" FontSize="14" FontWeight="Bold"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-4,0,0"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#2a2a4a"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnMaximize" Width="36" Height="32" Click="BtnMaximize_Click" ToolTip="Maximize">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <TextBlock Text="[ ]" FontSize="12" FontWeight="Bold"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#2a2a4a"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnClose" Width="36" Height="32" Click="BtnClose_Click" ToolTip="Close">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <TextBlock Text="X" FontSize="14" FontWeight="Bold"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="Background" Value="#CC2244"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Gradient Line at bottom of TopBar -->
                    <Rectangle Grid.Row="1" Height="2" Fill="{StaticResource CyanPinkGradient}"/>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- ROW 1: Sidebar (60px) + Content Area                           -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="{StaticResource BgPrimaryBrush}"
                        BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Top Navigation Buttons -->
                        <StackPanel Grid.Row="0" VerticalAlignment="Top" Margin="0,12,0,0">
                            <!-- Chat (AI) -->
                            <Grid x:Name="navChat" Margin="0,0,0,4">
                                <Rectangle x:Name="barChat" Width="3" Height="28" HorizontalAlignment="Left" RadiusX="1.5" RadiusY="1.5"
                                           Fill="{StaticResource NeonCyanBrush}" Margin="0,0,0,0"/>
                                <Button x:Name="btnNavChat" Style="{StaticResource SidebarButton}" Click="BtnNavChat_Click"
                                        Width="46" Height="42" Margin="7,0,7,0">
                                    <Button.Background>
                                        <SolidColorBrush Color="#00F5FF" Opacity="0.1"/>
                                    </Button.Background>
                                    <TextBlock Text="Ai" FontSize="14" FontWeight="Bold" Foreground="{StaticResource NeonCyanBrush}"/>
                                </Button>
                            </Grid>

                            <!-- NodeGraph -->
                            <Grid x:Name="navNode" Margin="0,0,0,4">
                                <Rectangle x:Name="barNode" Width="3" Height="28" HorizontalAlignment="Left" RadiusX="1.5" RadiusY="1.5"
                                           Fill="Transparent" Margin="0,0,0,0"/>
                                <Button x:Name="btnNavNode" Style="{StaticResource SidebarButton}" Click="BtnNavNode_Click"
                                        Width="46" Height="42" Margin="7,0,7,0">
                                    <TextBlock Text="Nd" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>

                            <!-- Preview -->
                            <Grid x:Name="navPreview" Margin="0,0,0,4">
                                <Rectangle x:Name="barPreview" Width="3" Height="28" HorizontalAlignment="Left" RadiusX="1.5" RadiusY="1.5"
                                           Fill="Transparent" Margin="0,0,0,0"/>
                                <Button x:Name="btnNavPreview" Style="{StaticResource SidebarButton}" Click="BtnNavPreview_Click"
                                        Width="46" Height="42" Margin="7,0,7,0">
                                    <TextBlock Text="Pv" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>

                            <!-- Log -->
                            <Grid x:Name="navLog" Margin="0,0,0,4">
                                <Rectangle x:Name="barLog" Width="3" Height="28" HorizontalAlignment="Left" RadiusX="1.5" RadiusY="1.5"
                                           Fill="Transparent" Margin="0,0,0,0"/>
                                <Button x:Name="btnNavLog" Style="{StaticResource SidebarButton}" Click="BtnNavLog_Click"
                                        Width="46" Height="42" Margin="7,0,7,0">
                                    <TextBlock Text="Lg" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Bottom: Settings -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,12">
                            <Grid x:Name="navSettings">
                                <Rectangle x:Name="barSettings" Width="3" Height="28" HorizontalAlignment="Left" RadiusX="1.5" RadiusY="1.5"
                                           Fill="Transparent" Margin="0,0,0,0"/>
                                <Button x:Name="btnNavSettings" Style="{StaticResource SidebarButton}" Click="BtnNavSettings_Click"
                                        Width="46" Height="42" Margin="7,0,7,0">
                                    <TextBlock Text="Set" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Border Grid.Column="1" Background="{StaticResource BgSecondaryBrush}">
                    <ContentControl x:Name="ContentArea"/>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- ROW 2: StatusBar (30px)                                        -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="2" Background="{StaticResource BgPrimaryBrush}" CornerRadius="0,0,12,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Gradient Line at top of StatusBar -->
                    <Rectangle Grid.Row="0" Height="2" Fill="{StaticResource PinkCyanGradient}"/>

                    <!-- StatusBar Content -->
                    <Grid Grid.Row="1" Margin="12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: LED + Status Text -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="ledStatus" Width="8" Height="8" Fill="#555555" Margin="0,0,6,0"/>
                            <TextBlock x:Name="txtStatusBar" Text="Disconnected" Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- CENTER: Version Badge -->
                        <Border Grid.Column="2" Background="{StaticResource NeonCyanMutedBrush}" CornerRadius="8" Padding="10,2"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="v1.0.0" Foreground="{StaticResource NeonCyanBrush}" FontSize="10" FontWeight="Bold"/>
                        </Border>

                        <!-- RIGHT: AI Provider -->
                        <TextBlock Grid.Column="4" x:Name="txtAiProvider" Text="AI: OpenAI GPT-4"
                                   Foreground="{StaticResource TextMutedBrush}" FontSize="10"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Resize Grip (visual indicator) -->
            <Path Grid.Row="2" Data="M 0,8 L 8,0 M 0,14 L 14,0 M 0,20 L 20,0"
                  Stroke="{StaticResource BorderSubtleBrush}" StrokeThickness="1"
                  HorizontalAlignment="Right" VerticalAlignment="Bottom"
                  Margin="0,0,4,4" IsHitTestVisible="False" Opacity="0.5"/>
        </Grid>
    </Border>
</Window>
