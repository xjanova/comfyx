<UserControl x:Class="ComfyX.Pages.NodeGraphPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             d:DesignHeight="600" d:DesignWidth="800"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Background="{StaticResource BgDeepBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource BgPrimaryBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                Padding="12,8">
            <DockPanel>
                <TextBlock Text="Node Graph" FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource SuccessBrush}"
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button x:Name="btnLoadChat" Content="Load from Chat"
                            Style="{StaticResource PrimaryButton}" Padding="12,6" Margin="0,0,6,0"
                            Click="BtnLoadChat_Click"/>
                    <Button x:Name="btnQueue" Content="Queue"
                            Style="{StaticResource SuccessButton}" Padding="12,6" Margin="0,0,6,0"
                            Click="BtnQueue_Click"/>
                    <Button x:Name="btnClear" Content="Clear"
                            Style="{StaticResource ModernButton}" Padding="12,6" Margin="0,0,6,0"
                            Click="BtnClear_Click"/>
                    <Button Content="-" Style="{StaticResource ModernButton}" Width="32" Height="32"
                            Click="BtnZoomOut_Click" Margin="0,0,4,0"/>
                    <TextBlock x:Name="txtZoom" Text="100%" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" FontSize="11" Margin="0,0,4,0" MinWidth="36" TextAlignment="Center"/>
                    <Button Content="+" Style="{StaticResource ModernButton}" Width="32" Height="32"
                            Click="BtnZoomIn_Click" Margin="0,0,8,0"/>
                    <Border Background="#0D0D1A" CornerRadius="10" Padding="8,4" VerticalAlignment="Center">
                        <TextBlock x:Name="txtNodeCount" Text="0 nodes" FontSize="11"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Canvas Area -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <!-- Grid dot background -->
            <Grid.Background>
                <DrawingBrush TileMode="Tile" Viewport="0,0,30,30" ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing Brush="#FF060610">
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,30,30"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                            <GeometryDrawing Brush="#15FFFFFF">
                                <GeometryDrawing.Geometry>
                                    <EllipseGeometry Center="15,15" RadiusX="0.8" RadiusY="0.8"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Grid.Background>

            <!-- Empty state placeholder -->
            <StackPanel x:Name="EmptyState" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="No workflow loaded" FontSize="18" FontWeight="SemiBold"
                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Generate a workflow from AI Chat or open a JSON file"
                           FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center" Margin="0,6,0,16"/>
                <Button Content="Generate with AI" Style="{StaticResource PrimaryButton}"
                        Padding="20,10" HorizontalAlignment="Center"
                        Click="BtnGenerateAI_Click"/>
            </StackPanel>

            <!-- Zoomable/pannable canvas container -->
            <Canvas x:Name="GraphCanvas" Visibility="Collapsed"
                    MouseLeftButtonDown="GraphCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="GraphCanvas_MouseLeftButtonUp"
                    MouseMove="GraphCanvas_MouseMove"
                    MouseWheel="GraphCanvas_MouseWheel">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="CanvasScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="CanvasPan" X="0" Y="0"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </Grid>
    </Grid>
</UserControl>
