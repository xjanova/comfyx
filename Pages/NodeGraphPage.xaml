<UserControl x:Class="ComfyX.Pages.NodeGraphPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <!-- Dark background with grid dot pattern (drawn via DrawingBrush) -->
        <Grid.Background>
            <DrawingBrush TileMode="Tile" Viewport="0,0,30,30" ViewportUnits="Absolute">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <!-- Base dark background -->
                        <GeometryDrawing>
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,30,30" />
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Brush>
                                <SolidColorBrush Color="#FF060610" />
                            </GeometryDrawing.Brush>
                        </GeometryDrawing>
                        <!-- Grid dot -->
                        <GeometryDrawing>
                            <GeometryDrawing.Geometry>
                                <EllipseGeometry Center="15,15" RadiusX="0.8" RadiusY="0.8" />
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Brush>
                                <SolidColorBrush Color="#15FFFFFF" />
                            </GeometryDrawing.Brush>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Grid.Background>

        <!-- Placeholder message -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="No workflow loaded."
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8" />
            <TextBlock Text="Use AI Chat to generate one."
                       FontSize="13"
                       Foreground="{StaticResource TextMutedBrush}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Canvas for future node rendering -->
        <Canvas x:Name="NodeCanvas"
                ClipToBounds="True" />
    </Grid>
</UserControl>
